      </section>
      <div class='article'>
        <% for(let i = 0 ; i < products.length ; i++) { %>
          <div class="item">
            <div class='picture_article'>
              <picture>
                <a href='/article?title=<%=products[i].title%>&price=<%= products[i].price %>&img=<%= products[i].img %>&description=<%= products[i].description %>'><img
                    src=<%= products[i].img %>/></a>
              </picture>
            </div>
            <div class='h3_title'>
              <h2>
                <%= products[i].title %>
              </h2>
            </div>
            <div class='h3_price'>
              <h2>
                <%= products[i].price %> â‚¬
              </h2>
            </div>
            <div class='button_article'>
              <form action="/add" method="POST">
                <input type="hidden" name="position" value="<%=i %>">                
              <button class="button">Ajouter au panier</button>
              </form>
            </div>
          </div>
          <% } %>
      </div>
      </section>
    </main>
    <%-  include('footer')  -%>
  </div>
</body>
<script type="text/javascript" src="/javascripts/menu.js"></script>
</html>